			    <li <%= yield :me %>><%= link_to "我", admin_edit_me_path, 'data-no-turbolink' => true  %></li>
					<li <%= yield :contact %>><%= link_to "留言 & 联系我", admin_contact_path %></li>
			  </ul>
			</div>

      <%= yield %>

